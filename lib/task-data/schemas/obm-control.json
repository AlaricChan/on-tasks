{
    "$schema": "rackhd-task-schema.json",
    "copyright": "Copyright 2016, EMC, Inc.",
    "title": "OBM Control",
    "description": "The schema for all obm control tasks",
    "describeJob": "Job.Obm.Node",
    "definitions": {
        "ObmAction": {
            "enum": [
                "clearSEL",
                "identifyOff",
                "identifyOn",
                "identifyBlink",
                "mcResetCold",
                "NMI",
                "powerButton",
                "powerOff",
                "powerOn",
                "powerStatus",
                "reboot",
                "reset",
                "setBootDisk",
                "setBootPxe",
                "softReset"
            ]
        },
        "ObmService": {
            "enum": [
                "amt-obm-service",
                "apc-obm-service",
                "ipmi-obm-service",
                "noop-obm-service",
                "panduit-obm-service",
                "raritan-obm-service",
                "redfish-obm-service",
                "servertech-obm-service",
                "vbox-obm-service",
                "vmrun-obm-service"
            ]
        }
    },
    "allOf": [
        { "$ref": "common-task-options.json#/definitions/Options" },
        {
            "type": "object",
            "properties": {
                "action": {
                    "$ref": "#/definitions/ObmAction",
                    "readonly": true
                },
                "obmService": {
                    "$ref": "#/definitions/ObmService"
                }
            },
            "required": ["action"]
        }
    ]
}
